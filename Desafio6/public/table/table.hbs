<div class="jumbotron">
  <h1>Vista de tus productos</h1>
  {{#if thereIsProducts}}
    <div class="table-responsive">
      <table class="table table-dark">
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Image</th>
        </tr>
        {{#each products}}
          <tr>
            <td>{{this.name}}</td>
            <td>${{this.price}}</td>
            <td>
              <img width="50" src={{this.image}} alt="image not found">
            </td>
          </tr>
        {{/each}}
      </table>
    </div>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos... :(</h3>
  {{/if}}
</div>